{
    "name": "user-api",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "typeorm": "ts-node ./node_modules/typeorm/cli -f ./src/common/postgres/ormconfig.ts",
        "typeorm:generate": "ts-node ./node_modules/typeorm/cli -f ./src/common/postgres/ormconfig.ts migration:generate",
        "typeorm:create": "ts-node ./node_modules/typeorm/cli -f ./src/common/postgres/ormconfig.ts migration:create",
        "typeorm:migrate": "ts-node ./node_modules/typeorm/cli -f ./src/common/postgres/ormconfig.ts migration:run",
        "typeorm:revert": "ts-node ./node_modules/typeorm/cli -f ./src/common/postgres/ormconfig.ts migration:revert",
        "typeorm:show": "ts-node ./node_modules/typeorm/cli -f ./src/common/postgres/ormconfig.ts migration:show",
        "start": "PORT=3000 NODE_ENV=dev nest start",
        "start:dev": "DEBUG=true PORT=3020 NODE_ENV=dev nest start --watch",
        "start:dev:staging": "PORT=3020 NODE_ENV=staging nest start --watch",
        "start:dev:prod": "PORT=3020 NODE_ENV=prod nest start --watch",
        "start:prod": "node dist/src/main",
        "test": "NODE_ENV=dev jest"
    },
    "dependencies": {
        "@hapi/joi": "^16.1.7",
        "@nestjs/common": "^6.11.7",
        "@nestjs/config": "^0.0.9",
        "@nestjs/core": "^6.7.2",
        "@nestjs/jwt": "^6.1.1",
        "@nestjs/passport": "^6.1.1",
        "@nestjs/platform-express": "^6.7.2",
        "@nestjs/swagger": "^4.2.0",
        "@nestjs/typeorm": "^6.2.0",
        "@types/express-rate-limit": "^3.3.3",
        "@types/express-slow-down": "^1.1.1",
        "@types/helmet": "0.0.45",
        "@types/moment": "^2.13.0",
        "@types/morgan": "^1.7.37",
        "@types/nodemailer": "^6.4.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.12.2",
        "express-rate-limit": "^5.0.0",
        "express-slow-down": "^1.3.1",
        "helmet": "^3.21.2",
        "moment": "^2.24.0",
        "moment-timezone": "^0.5.28",
        "morgan": "^1.9.1",
        "mysql": "^2.18.1",
        "nest-morgan": "^1.0.1",
        "nodemailer": "^6.4.6",
        "objects-to-csv": "^1.3.6",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^7.17.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.0",
        "rxjs": "^6.5.3",
        "swagger-ui-express": "^4.1.3",
        "typeorm": "^0.2.22"
    },
    "devDependencies": {
        "@nestjs/cli": "^6.9.0",
        "@nestjs/schematics": "^6.7.0",
        "@nestjs/testing": "^6.11.11",
        "@types/express": "^4.17.1",
        "@types/hapi__joi": "^16.0.6",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.12.62",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.8",
        "jest": "^24.9.0",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.1.1",
        "ts-node": "^8.4.1",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.0",
        "typescript": "^3.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "tests",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
